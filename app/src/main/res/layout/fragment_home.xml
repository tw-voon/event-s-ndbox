            //Hot and New layout
            <LinearLayout
                android:layout_below="@id/category_linearlayout"
                android:id="@+id/hotandnewlayout"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Hot &amp; New"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/hotCardView"
                    app:cardCornerRadius="4dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:elevation="5dp">

                    <LinearLayout
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="7dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@android:color/white"
                            android:layout_gravity="center_vertical"
                            android:text="See More"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />

                    </LinearLayout>



                </android.support.v7.widget.CardView>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/hot_recyclerview"
                android:layout_below="@+id/hotandnewlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp">

            </android.support.v7.widget.RecyclerView>


            <View
                android:id="@+id/lines_grey"
                android:layout_below="@+id/hot_recyclerview"
                android:background="#CFD8DC"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

