<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/man"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/reviewCustomerName"
                android:layout_marginTop="8dp"
                android:text="Customer Name"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            app:srcCompat="@drawable/ic_star_border"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                        <TextView
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="8sp"
                            android:text="3.5 Stars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:text="12 April 2018"
                    android:layout_gravity="center_vertical"
                    android:textSize="8sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/reviewCustomerReview"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="@color/bluishGrey"
                android:text="Such a delicious ice cream i had ever eat in my entire life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>